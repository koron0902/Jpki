<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:paddingHorizontal="15dp">

    <Button
            app:layout_constraintVertical_chainStyle="spread"
            android:id="@+id/read_attrs"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toTopOf="@id/read_sig"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="可能な情報の読み取り" />
    <Button
            app:layout_constraintVertical_chainStyle="spread"
            android:id="@+id/read_sig"
            app:layout_constraintTop_toBottomOf="@id/read_attrs"
            app:layout_constraintBottom_toTopOf="@id/read_cert"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="署名の読み取り" />
    <Button
            app:layout_constraintVertical_chainStyle="spread"
            android:id="@+id/read_cert"
            app:layout_constraintTop_toBottomOf="@id/read_sig"
            app:layout_constraintBottom_toTopOf="@id/read_basic"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="証明書の読み取り" />
    <Button
            app:layout_constraintVertical_chainStyle="spread"
            android:id="@+id/read_basic"
            app:layout_constraintTop_toBottomOf="@id/read_cert"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="基本情報の読み取り" />

</androidx.constraintlayout.widget.ConstraintLayout>